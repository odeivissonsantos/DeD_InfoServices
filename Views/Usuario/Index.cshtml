        //    if ((charCode > 31 && charCode < 48) || charCode > 57) {
        //        return false;
        //    }
        //    return true;
        //}

        listar();
    });

    function listar() {
        $('#list_items').dataTable({
            'bPaginate': true,
            'bJQueryUI': true,
            'bProcessing': true,
            'bServerSide': true,
            'bDestroy': true,
            'sAjaxSource': `@Url.Action("UsuarioPagination", "Usuario")?nome=${$('#pesquisaNome').val()}&email=${$('#pesquisaEmail').val()}`,
            'sServerMethod': 'POST',
            'aoColumns': [
                { 'mData': 'ide_usuario' },
                { 'mData': 'nome' },
                { 'mData': 'email' },
                { 'mData': 'dtc_cadastro' },
                { 'mData': 'perfil' }
                //{ 'mData': 'editar' },
                //{ 'mData': 'excluir' }
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.12.1/i18n/pt-BR.json"
                }
        });
    }

    @*function modalExcluir(ide_exame, justificativa) {
        $('#txtJustificativa').val('');
        $('#modal-exclusao').modal('show');
        $('#btn-confirmar-excluir').attr('id-target', ide_exame);
    }

    function excluir() {
        let ide_exame = $('#btn-confirmar-excluir').attr('id-target');
        let justificativa = $('#txtJustificativa').val();

        if (!justificativa) {
            swal("Ops!", "Justificativa é obrigatória!", "error");
            return;
        } else if (justificativa.length < 5) {
            swal("Ops!", "Justificativa deve ter, no mínimo, 5 caracteres!", "error");
            return;
        }

        $.ajax({
            type: 'POST',
            data: {
                'ide_exame': ide_exame,
                'justificativa': justificativa
            },
            url: '@Url.Action("ExcluirExame", "SGPE")',
            success: function (result) {
                if (result.is_action) {
                    swal("Sucesso!", "Exame excluído com sucesso!", "success");
                    listar();
                    $('#modal-exclusao').modal('hide');
                }
                else {
                    swal("Ops!", result.error, "error");
                }
            },
            error: function (error)
            {
                swal("Ops!", "Ocorreu um erro: " + error, "error");
            },
            datatype: 'json'
        });
    }*@
</script>

